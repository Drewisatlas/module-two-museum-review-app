<!DOCTYPE html>
<html>
  <head>
    <title>ModuleTwoMuseumReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="nav_bar">
      <ul>
        <li><%= link_to "Browse Museums", museums_path %></li>
        <li><%= link_to "Submit a new Review", new_review_path %></li>
        <li><%= link_to "Home", root_path %></li>
      </ul>
    </div>
    <% if session[:username] %>
        <div><%= "Hello #{session[:username]}" %> <%= link_to "Logout", logout_path, method: :delete %></div>
      <% else %>
        <div><%= link_to "Login", login_path %></div>
    <% end %>
    <br>
    <%= yield %>

  </body>
</html>
