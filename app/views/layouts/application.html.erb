<!DOCTYPE html>
<html>
  <head>
    <title>ModuleTwoMuseumReviewApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/semantic-ui@2.4.2/dist/semantic.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="ui inverted menu">
        <%= link_to "Browse Museums", museums_path, class: "teal item" %> <%= link_to "Submit a new Review", new_review_path, class: "teal item" %> <%= link_to "Home", root_path, class: "teal item" %>

    <% if session[:username] %>
        <%= link_to "Logout", logout_path, method: :delete, class: "teal item" %>
      <% else %>
        <%= link_to "Login", login_path, class: "teal item" %>
    <% end %>
    </div>
    <% if session[:username] %>
      <p><%= "Hello, #{session[:username]}" %>
      <br>
    <% end %>
    <%= yield %>

  </body>
</html>
